extends _layout/layout

block variables
	- var title = 'MEYER Products'
	- var description = 'Description for home page'
	- var bodyclass = 'home'
	- var href = "/index.html"
block body
	section.products
		.container.pt-5
			.border-bottom.mb-4.pb-2
				.row
					.col-md.mr-auto
						h2.d-flex.align-items-center PRODUCTS 
							span.badge.itemsall.small.ml-2
					.col-md-auto
						.row
							.col-auto.pr-0
								#sortItems
							.col-auto
								select#showItems.custom-select.mr-sm-2
									option(value='6') Default
		.container.py-3
			.row 
				.col-lg-3.order-lg-1.order-2
					.d-flex.mt-5.mt-md-0.mb-4.justify-content-between.align-items-center
						h4 Filter by
						a.filter_by.small.btn.btn-danger.btn-small.d-none(href="./") Clear
					h6.pb-3.mb-3.border-bottom Type 
					.mb-4
						#customType
						.loading
							i.fas.fa-sync.fa-spin
							| 
							| Loading...
					h6.pb-3.mb-3.border-bottom Price
					.mb-4
						input#customPrice.custom-range.d-none(type="range")
						.loading
							i.fas.fa-sync.fa-spin
							| 
							| Loading...
					h6.pb-3.mb-3.border-bottom Rating
					.mb-4
						#customRating
						.loading
							i.fas.fa-sync.fa-spin
							| 
							| Loading...
					h6.pb-3.mb-3.border-bottom Color
					.mb-4
						#customColors
						.loading
							i.fas.fa-sync.fa-spin
							| 
							| Loading...
				.col-lg-9.order-lg-1.order-1
					nav(aria-label="breadcrumb")
						ol.breadcrumb.d-md-flex.justify-content-end.d-none
							li.breadcrumb-item
								a(href="./") Meyer
							li.breadcrumb-item.active(aria-current="page") Shop
					.row#items
					#loading.loading
						i.fas.fa-sync.fa-spin
						| 
						| Loading...
						//- .col-sm-6.col-md-4.item
							.product-item
								img(src="./img/demo1.png")
								h5.my-2 Product name
								p.rating
									i.fas.fa-star
									i.fas.fa-star
									i.fas.fa-star
									i.fas.fa-star.deactive
									i.fas.fa-star.deactive
								p.price $32
								p.more 
									a.btn.btn-primary(href="javascript:void(0);", data-toggle="modal", data-target="#staticBackdrop") View More
					.row 
						.col
							nav.d-flex.justify-content-end
								ul.pagination.pagination-sm#paging
									li.page-item.disabled
										span.page-link Pages
									

	// Modal popup
	#staticBackdrop.modal.fade(data-backdrop="static", data-keyboard="false", tabindex="-1", aria-labelledby="staticBackdropLabel", aria-hidden="true")
		.modal-dialog.modal-dialog-centered.modal-xl
			.modal-content
				.modal-header
					h5#staticBackdropLabel.modal-title 
					button.close(type="button", data-dismiss="modal", aria-label="Close")
						i.fas.fa-times
				.modal-body
					#loading_modal.loading
						i.fas.fa-sync.fa-spin
						| 
						| Loading...